{
  "name": "cashflow-pro-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "author": "GameZone",
  "description": "CashFlow Pro Desktop con SQLite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "start": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^0.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cashflow259.app",
    "productName": "CashFlow259",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}